---
import Layout from "../layouts/Layout.astro";
import { Image, Picture } from "astro:assets";
import authorImg from "../assets/images/author.webp";
import Button from "../components/Button.astro";
import { getI18N } from "../i18n/index.js";

const { currentLocale } = Astro;
const t = getI18N({ currentLocale });
---

<Layout title={t.about.SEO_TITLE}>
  <div class="flex flex-col lg:flex-row gap-8">
    <div>
      <div>
        <!-- <img src="/images/author.webp" alt="Author" class="rounded-lg" /> -->
        <!-- <Picture
              src={authorImg}
              formats={["webp", "jpeg", "avig"]}
              alt="Author"
              class="rounded-lg"
            /> -->
        <Image src={authorImg} alt="Author" class="rounded-lg" />
      </div>
    </div>
    <div class="prose">
      <h1>{t.about.PAGE_TITLE}</h1>
      <p>
        {t.about.PAGE_TEXT_01}
      </p>
      <p>
        {t.about.PAGE_TEXT_02}
      </p>

      <Button href="/" type="primary">{t.about.BUTTON_CTA}</Button>
    </div>
  </div>
</Layout>
